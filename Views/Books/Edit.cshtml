@model LibraryManagerApp.Models.Book

<h2>Редагувати книгу</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Назва</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Кількість сторінок</label>
        <input asp-for="Pages" class="form-control" />
        <span asp-validation-for="Pages" class="text-danger"></span>    
    </div>
    <div class="form-group">
        <label>Жанр</label>
        <select asp-for="Genre" class="form-control">
            <option value="Фантастика">Фантастика</option>
            <option value="Детектив">Детектив</option>
            <option value="Пригоди">Пригоди</option>
            <option value="Фентезі">Фентезі</option>
            <option value="Історичний">Історичний</option>
            <option value="Драма">Драма</option>
            <option value="Комедія">Комедія</option>
            <option value="Жахи">Жахи</option>
            <option value="Філософія">Філософія</option>
            <option value="Психологія">Психологія</option>
            <option value="Наука">Наука</option>
            <option value="Інше">Інше</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Автор</label>
        <select asp-for="AuthorId" asp-items="ViewBag.AuthorId" class="form-control"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Оновити</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}